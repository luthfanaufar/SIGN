<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aidindonesia.project.sign.MainActivity">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:text="Go to camera"
            android:layout_height="wrap_content"
            android:onClick="goToCamera"
            />

        <Button
            android:layout_width="match_parent"
            android:text="Go to Recent Signs"
            android:layout_height="wrap_content"
            android:onClick="goToRecent"
            />

        <Button
            android:layout_width="match_parent"
            android:text="Go to Post"
            android:layout_height="wrap_content"
            android:onClick="goToPost"
            />

        <Button
            android:layout_width="match_parent"
            android:text="Go to Response"
            android:layout_height="wrap_content"
            android:onClick="goToResponse"
            />



        </LinearLayout>


</RelativeLayout>
